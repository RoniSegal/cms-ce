<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

    <context:annotation-config/>

    <!-- Incject vertical properties singleton. -->
    <bean id="verticalProperties" class="com.enonic.vertical.VerticalProperties">
        <property name="properties" value="#{config.properties}"/>
    </bean>

    <!-- Placeholder configurer. -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        <property name="properties" value="#{config.properties}"/>
    </bean>

    <context:component-scan base-package="com.enonic.cms.store"/>
    <context:component-scan base-package="com.enonic.cms.core"/>
    <context:component-scan base-package="com.enonic.cms.business"/>
    <context:component-scan base-package="com.enonic.cms.framework"/>

    <import resource="dataSourceContext.xml"/>

    <import resource="classpath:businessDeprecatedHandlers-context.xml"/>
    <import resource="classpath:store-context.xml"/>

    <import resource="classpath:business-context.xml"/>
    <import resource="classpath:businessCore-context.xml"/>
    <import resource="classpath:businessClient-context.xml"/>
    <import resource="classpath:businessUserstore-context.xml"/>
    <import resource="classpath:businessPortal-context.xml"/>
    <import resource="classpath:businessImage-context.xml"/>
    <import resource="classpath:businessDeprecatedServices-context.xml"/>
    <import resource="classpath:businessDeprecatedContentXmlBuilder-context.xml"/>

    <import resource="classpath:server-context.xml"/>

    <import resource="initializationContext.xml"/>

    <import resource="staticInitializationContext.xml"/>

</beans>
